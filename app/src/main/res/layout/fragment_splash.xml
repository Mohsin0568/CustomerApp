<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.templatexuv.apresh.smstemplates.SplashFragment"
    android:background="@color/white_color"
    >

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/theme_green_color"
        android:layout_centerInParent="true"
        android:layout_above="@+id/splash_icon"
        android:layout_marginBottom="25dp"
        android:textSize="28sp"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_icon"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_cart_large"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/versionLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/version"
            android:textStyle="bold"
            android:textColor="@color/theme_green_color"
            android:textSize="16sp"
            android:id="@+id/version" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/theme_green_color"
            android:textSize="17sp"
            android:text="1.0"
            android:id="@+id/versionValue" />
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@color/black_color"
        android:layout_above="@+id/versionLay"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
